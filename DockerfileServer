FROM openjdk:11 AS builder
ENV APP_HOME=/usr/app/
WORKDIR $APP_HOME
COPY server/build.gradle.kts server/settings.gradle.kts server/gradlew $APP_HOME
COPY server/gradle $APP_HOME/gradle
RUN ./gradlew build || return 0
COPY server .
RUN ./gradlew build

FROM openjdk:11
ENV ARTIFACT_NAME=server-0.0.1-SNAPSHOT.jar
ENV APP_HOME=/usr/app/
WORKDIR $APP_HOME
COPY --from=builder $APP_HOME/build/libs/$ARTIFACT_NAME .
EXPOSE 8080
CMD ["java","-jar",$ARTIFACT_NAME]
